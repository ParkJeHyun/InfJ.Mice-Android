<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- header in xml files -->

        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bg"
            android:gravity="center_vertical"
            android:paddingBottom="10dp" >

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_back" />
            
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/total_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Survey" 
                    android:gravity="center"
                    android:textSize="20sp"
                    />
                <!-- <kr.co.iekorea.mc.and.util.ResizeView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" 
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="base" 
                        android:gravity="center"
                        android:textSize="20sp"
                        />
                </kr.co.iekorea.mc.and.util.ResizeView> -->
            </LinearLayout>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_back" 
                android:visibility="invisible"
                />
        </LinearLayout>

        <!-- body area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff"
            android:orientation="vertical" 
            >
            <!-- title -->
            <LinearLayout 
                android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:orientation="vertical"
                >
                <!-- title and wirter -->
                <LinearLayout 
                    android:layout_width="match_parent"
            			android:layout_height="0dp"
            			android:layout_weight="1"
            			android:weightSum="5"
            			android:layout_margin="10dp"
                    >
                    <TextView
                        android:id="@+id/RESEARCH_TITLE" 
                        android:layout_width="0dp"
            				android:layout_height="match_parent"
            				android:layout_weight="3"
            				android:text="title"
            				android:textSize="16sp"
                        />
                    <LinearLayout 
                        android:layout_width="0dp"
            				android:layout_height="match_parent"
            				android:layout_weight="2"
            				android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="작성자 : " 
                            android:textSize="16sp"
                            />
                        <TextView
                            android:id="@+id/RESEARCH_MAKER" 
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="홍창기"
                            android:textSize="16sp" 
                            />
                        
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ba999999" />

            <!-- view pager area -->
            <LinearLayout 
            		android:layout_width="match_parent"
            		android:layout_height="0dp"
            		android:layout_weight="1"
            		>

                <android.support.v4.view.ViewPager
                    android:id="@+id/list_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="visible" />
                
            </LinearLayout>
            <!-- Button area -->
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                
                <ImageButton 
                    android:id="@+id/btn_pre"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@null"
                    android:src="@drawable/b_prev_kr"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    />
                <ImageButton 
                    android:id="@+id/btn_next"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@null"
                    android:src="@drawable/b_next_kr"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    />
                <ImageButton 
                    android:id="@+id/btn_final"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/b_confirm_kr"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <!-- Progress Bar Area -->
    <LinearLayout 
        android:id="@+id/layout_progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ba000000"
        android:gravity="center"
        android:visibility="gone"
        >
        
        <ProgressBar 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            />
        <TextView 
            android:id="@+id/text_wait"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="잠시만 기다려 주세요."
        	android:textSize="20sp"
        	android:textStyle="bold"
        	android:typeface="monospace"
        	android:layout_marginLeft="20dp"
        	android:textColor="#ffffffff"
            />
        
    </LinearLayout>
</RelativeLayout>
