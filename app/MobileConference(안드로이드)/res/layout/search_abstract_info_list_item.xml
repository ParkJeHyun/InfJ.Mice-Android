<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_session_time_layout"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp" >

        <!-- line 1 -->

        <LinearLayout
            android:id="@+id/layout_presenter"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:weightSum="5" >

            <TextView
                android:id="@+id/text_speaker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="발표자"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_presenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="testestesetsetsetsetesesersetsetseset"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:weightSum="5" >

            <TextView
                android:id="@+id/text_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="저자"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_writer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="testestesetsetsetsetesesersetsetseset"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- line 2 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:weightSum="5" >

            <TextView
                android:id="@+id/info_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="제목"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_binder_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="testestesetsetsetsetesesersetsetseset"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- line 3 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:weightSum="5" >

            <TextView
                android:id="@+id/info_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="주제"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_topic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="testestesetsetsetsetesesersetsetseset"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>