<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_correction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            class="com.google.android.gms.maps.MapFragment"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/call_button"
            android:background="@drawable/call"
            android:layout_alignTop="@+id/result_cb"
            android:layout_toLeftOf="@+id/result_cb"
            android:layout_toStartOf="@+id/result_cb" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_cb"
            android:button="@android:drawable/btn_star"
            android:layout_below="@+id/map"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:stretchColumns = "1"
            android:layout_below="@+id/call_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#0E4EAD">
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#0E4EAD"/>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:typeface="monospace"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="#0E4EAD"
                    android:textColor="#ffffff"
                    android:text="기관명">
                </TextView>
                <TextView
                    android:id="@+id/companyName_col"
                    android:layout_column="1"
                    android:background="#ffffff"
                    android:typeface="monospace"
                    android:layout_marginRight="2px"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#0E4EAD"/>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:typeface="monospace"
                    android:background="#0E4EAD"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:text="주소">
                </TextView>
                <TextView
                    android:id="@+id/companyAddr_col"
                    android:layout_column="1"
                    android:background="#ffffff"
                    android:typeface="monospace"
                    android:layout_marginRight="2px"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#0E4EAD"/>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#0E4EAD"
                    android:typeface="monospace"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="전화번호">
                </TextView>
                <TextView
                    android:id="@+id/companyNum_col"
                    android:layout_column="1"
                    android:background="#ffffff"
                    android:typeface="monospace"
                    android:layout_marginRight="2px"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#0E4EAD"/>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:typeface="monospace"
                    android:background="#0E4EAD"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:text="담당자">
                </TextView>
                <TextView
                    android:id="@+id/companyPer_col"
                    android:layout_column="1"
                    android:background="#ffffff"
                    android:layout_marginRight="2px"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#0E4EAD"/>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_column="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:typeface="monospace"
                    android:background="#0E4EAD"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:text="측정능력">
                </TextView>
                <TextView
                    android:id="@+id/companyRange_col"
                    android:layout_column="1"
                    android:background="#ffffff"
                    android:typeface="monospace"
                    android:layout_marginRight="2px"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                </TextView>

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#0E4EAD"/>

        </TableLayout>

    </RelativeLayout>

    <fragment android:id="@+id/navigation_drawer_correction"
        android:layout_width="@dimen/navigation_drawer_width" android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.jori.ko_search.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout><!-- From: file:/C:/Users/Administrator/AndroidStudioProjects/Ko-search/app/src/main/res/layout/activity_result.xml -->